  <!-- Capteurs Ultrason -->
  <xacro:ultrasonic_sensor 
    name="uls_frontleft" 
    joint_xyz="0.206 -0.57 0.216"
    joint_rpy="0 0 0"/>
  <xacro:ultrasonic_sensor 
    name="uls_frontright" 
    joint_xyz="-0.206 -0.57 0.216"
    joint_rpy="0 0 0"/>
  <xacro:ultrasonic_sensor 
    name="uls_backleft" 
    joint_xyz="0.206 0.405 0.216"
    joint_rpy="0 0 3.14"/>
  <xacro:ultrasonic_sensor 
    name="uls_backright" 
    joint_xyz="-0.206 0.405 0.216"
    joint_rpy="0 0 3.14"/>

  <!-- Lidar -->
  <xacro:lidar_sensor 
    name="lidar"
    parent_link="chassis"
    joint_xyz="0.0 -0.492 0.272"
    joint_rpy="0 0 3.14"
    mesh_xyz="0 0 0"
    mesh_rpy="0 0 0"
    mesh="lidar.stl"/>

  <!-- CamÃ©ra -->
  <link name="camera_link"/>

  <joint name="camera_joint" type="fixed">
    <parent link="chassis"/>
    <child link="camera_link"/>
    <origin xyz="0.0 -0.492 0.12" rpy="0 0 1.57"/>
